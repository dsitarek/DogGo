@model DogGo.Models.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
  <h1 class="mb-4">@Model.Walker.Name</h1>

  <section class="container">
    <img
      style="width:100px;float:left;margin-right:20px"
      src=@Model.Walker.ImageUrl
    />
    <div>
      <label class="font-weight-bold">Name:</label>
      <span>@Model.Walker.Name</span>
    </div>
    <div>
      <label class="font-weight-bold">Neighborhood:</label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  <div class="row">
    <section class="col-8 container mt-5">
      <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().OwnerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Walks.FirstOrDefault().Duration)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Walks) {
                        int timeInMinutes = item.Duration / 60;
                        <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OwnerName)
                    </td>
                    <td>
                        @timeInMinutes min
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </section>

    <section class="col-lg-4 col-md-8 container mt-5">
      <h2>Total Walk Time: @Model.TotalTime</h2>
    </section>
  </div>
</div>
